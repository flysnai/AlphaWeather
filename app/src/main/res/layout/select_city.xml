<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guijunbai.alphaweather.SelectCityActivity">
    <RelativeLayout
        android:id="@+id/selectcity_search_rela"
        android:layout_width="fill_parent"
        android:layout_height="45.dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@+id/selectcity_search_buttonrela">
            <EditText
                android:id="@+id/selectcity_search"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="    搜索全国城市(中文)"
                android:paddingLeft="35dp"
                android:textSize="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/selectcity_search_buttonrela"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/selectcity_search_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/search"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ListView
            android:id="@+id/select_city_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="71dp" />
    </RelativeLayout>
</RelativeLayout>